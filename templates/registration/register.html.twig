{% extends 'base.html.twig' %}

{% block title 'Log in!' %}

{% block body %}
	<div class="div row">
		<div class=" col-md-6 mx-auto">
			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="alert alert-error rounded mb-3" role="alert">{{ flash_error }}</div>
			{% endfor %}

			<h1 class="my-5 text-center">Create an account</h1>

			{{ form_start(registrationForm) }}
			<div class="row">
				<div class=" col md-6">
					{{ form_row(registrationForm.firstName) }}
				</div>
				<div class=" col md-6">
					{{ form_row(registrationForm.lastName) }}


				</div>

				{{ form_row(registrationForm.email) }}

			</div>


			{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
			{{ form_row(registrationForm.agreeTerms) }}

			<button type="submit" class="btn btn-primary btn-lg col-12" formnovalidate>Register</button>
			<p class="mt-3 text-muted text-center">
				Already have an account?
				<a href="{{path('app_login')}}">Log in</a>
			</p>
			{{ form_end(registrationForm) }}

		</div>
	</div>

{% endblock %}
