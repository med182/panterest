{% extends "base.html.twig" %}

{% block title 'Find all the best pins on earth' %}

{% block body %}
	<article>
		<h2>{{ pin.title}}</h2>
		<P>{{pin.description}}</P>
	</article>
	<a href="{{path('pins_edit', {id:pin.id})}}">Edit</a>|
	<a href="#" onclick="event.preventDefault(); confirm('Are you sure?') && document.getElementById('js-pin-delete-form').submit();">Delete</a>

	<form id="js-pin-delete-form" action="{{ path('pins_delete', {id:pin.id})}}" method="post" style="display:none;">
		<input type="hidden" value="{{ csrf_token('pins_deletion' ~ pin.id)}}">
		<input type="hidden" name="_method" value="DELETE">

	</form>


{% endblock %}
